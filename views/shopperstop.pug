extends layout

block content
  h1= title
  p Welcome to the shopperstop  pug
   div(class="container-fluid")
        div(class="row")
            -
                let shopperstop  = [
                    {
                        "Itemname": "Fossil watch",
                        "Quantity": 2,
                        "price": 220
                    },
                    {
                        "Itemname": "CLARINS",
                        "Quantity": 10,
                        "price": 799
                    },
                    {
                        "Itemname": "Kurtas",
                        "Quantity": 8,
                        "price": 458
                    },                   
                ]
            each v,index in shopperstop       
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
       function buy(itemNo)
    {
        alert(`you purchased Item ${itemNo+1}`)
    }    